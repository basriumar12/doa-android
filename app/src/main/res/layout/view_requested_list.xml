<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
   android:layout_margin="2dp"
    android:background="@color/colorWhite"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="15dp"
    >


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/img_suggestion"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="30dp"
        android:layout_width="95dp"
        android:layout_height="95dp"
        android:contentDescription="@string/app_name"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_menu_profiles"
        android:layout_marginBottom="15dp"
        />

    <LinearLayout
        android:layout_toLeftOf="@id/tv_approve"
        android:layout_marginTop="50dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/img_suggestion"
        >

    <TextView
        android:textStyle="bold"
        android:textSize="12sp"
        android:id="@+id/tv_name_suggestion"
        android:text="Name"
        android:layout_marginLeft="10dp"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_marginLeft="10dp"
        android:id="@+id/tv_profession_requested"
        android:textSize="12sp"
        android:layout_below="@id/tv_name_suggestion"
        android:text="Name"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    </LinearLayout>



    <TextView
        android:layout_marginLeft="10dp"
        android:id="@+id/tv_approve"
        android:paddingLeft="18dp"
        android:paddingRight="18dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:textColor="@color/colorWhite"
        android:background="@drawable/bg_button_unduh"
        android:layout_marginRight="40dp"
        android:layout_marginTop="40dp"
        android:layout_alignParentRight="true"
        android:text="@string/connect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:background="@drawable/bg_button_shadow_black"
        android:layout_below="@id/tv_approve"
        android:layout_marginLeft="10dp"
        android:id="@+id/tv_delete"
        android:paddingLeft="24dp"
        android:paddingRight="24dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="10dp"
        android:layout_alignParentRight="true"
        android:text="@string/delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <ImageView
        android:visibility="gone"
        android:src="@drawable/ic_more_list"
        android:layout_marginLeft="10dp"
        android:id="@+id/img_popup_requested"
        android:paddingLeft="18dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="60dp"
        android:layout_alignParentRight="true"
        android:text="@string/connect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>