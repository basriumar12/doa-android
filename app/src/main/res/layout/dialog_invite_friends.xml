<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textColor="@android:color/black"
        android:gravity="center_horizontal"
        android:text="@string/invite_friends"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorVeryLightPink_eb" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/btnInviteFacebook"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/ic_facebook"
            android:layout_margin="16dp"
            android:background="@android:color/transparent"
            android:layout_gravity="center"/>

        <ImageButton
            android:id="@+id/btnInviteTwitter"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/ic_twitter"
            android:layout_margin="16dp"
            android:background="@android:color/transparent"
            android:layout_gravity="center"/>

        <ImageButton
            android:id="@+id/btnInvitePinterest"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/ic_pinterest"
            android:layout_margin="16dp"
            android:background="@android:color/transparent"
            android:layout_gravity="center"/>

        <ImageButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/ic_google"
            android:layout_margin="16dp"
            android:background="@android:color/transparent"
            android:layout_gravity="center"/>

        <ImageButton
            android:id="@+id/btnInviteMail"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/ic_mail"
            android:layout_margin="16dp"
            android:background="@android:color/transparent"
            android:layout_gravity="center"/>

        <ImageButton
            android:id="@+id/btnInviteWhatsapp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/ic_whatsapp"
            android:layout_margin="16dp"
            android:background="@android:color/transparent"
            android:layout_gravity="center"/>

        <ImageButton
            android:id="@+id/btnInviteLink"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/ic_link"
            android:layout_margin="16dp"
            android:background="@android:color/transparent"
            android:layout_gravity="center"/>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textColor="@android:color/black"
        android:gravity="center_horizontal"
        android:text="@string/cancel"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"/>

</LinearLayout>