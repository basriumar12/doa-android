<?xml version="1.0" encoding="utf-8"?>
<LinearLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:paddingBottom="8dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_marginTop="3dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageProfile"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_margin="8dp"
                    android:contentDescription="@string/app_name"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/textOfficial"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#000000"
                        android:text="@string/doa_official"/>

                    <TextView
                        android:id="@+id/textDateOfficial"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:textColor="#878787"
                        android:text="@string/date"/>
                </LinearLayout>

                <ImageView
                    android:id="@+id/imageBookmarkEvent"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/ic_bookmark"
                    android:visibility="visible"
                    android:padding="14dp"/>

                <ImageView
                    android:id="@+id/imageShareEvent"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/ic_share"
                    android:padding="14dp"
                    android:visibility="visible"
                    android:layout_marginEnd="8dp"/>

            </LinearLayout>

            <ImageView
                android:id="@+id/imageFundings"
                android:layout_width="match_parent"
                android:scaleType="fitXY"
                android:layout_height="350dp"
                android:contentDescription="@string/app_name"/>

            <TextView
                android:id="@+id/textFunding"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:textAlignment="inherit"
                android:textSize="12sp"
                android:maxLines="2"
                android:ellipsize="end"
                android:padding="8dp"
                tools:text="â€œMeet and interact with successful entrepreneurs, investors and political decision makers." />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:layout_margin="8dp"
                android:background="@color/colorSeparate"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="12sp"
                    android:layout_margin="8dp"
                    android:textColor="#878787"
                    android:text="@string/startup_event"/>

                <Button
                    android:id="@+id/buttonEvent"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:textSize="12sp"
                    android:text="@string/register"
                    android:textColor="@android:color/white"
                    android:background="@drawable/color_retangcle_button"/>

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>